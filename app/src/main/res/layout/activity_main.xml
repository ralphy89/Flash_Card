<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_400"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/BackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_flashcard"
        android:contentDescription="@string/bg_image" />

    <ImageView
        android:id="@+id/add_button"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:contentDescription="@string/todo1"
        android:src="@drawable/baseline_add_24"
        tools:ignore="RedundantDescriptionCheck"
        />
    <ImageView
        android:id="@+id/edit_button"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20sp"
        android:layout_marginBottom="30sp"
        android:contentDescription="@string/edit_button"
        android:src="@drawable/edit_button1"
        tools:ignore="RedundantDescriptionCheck"
        />

    <ImageView
        android:id="@+id/delete_button"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="20sp"
        android:layout_marginBottom="30sp"
        android:contentDescription="@string/edit_button"
        android:src="@drawable/baseline_delete_forever_24"
        tools:ignore="RedundantDescriptionCheck,ImageContrastCheck" />

    <ImageView
        android:id="@+id/next_button_right"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_below="@id/flashcard_question"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30sp"
        android:layout_marginEnd="30sp"
        android:contentDescription="@string/next_button"
        android:src="@drawable/next_button_right"
        tools:ignore="RedundantDescriptionCheck" />
    <ImageView
        android:id="@+id/next_button_left"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_below="@id/flashcard_question"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30sp"
        android:layout_marginTop="30sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:contentDescription="@string/next_button"
        android:src="@drawable/next_button_left"
        tools:ignore="RedundantDescriptionCheck"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="@string/default_timer"
        android:gravity="center"
        android:background="@color/teal_100"
        android:textColor="@color/red_100"
        android:textSize="40sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:gravity="center"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:paddingBottom="-10sp"
        android:text="@string/question1"
        android:textColor="@color/gray_200"
        android:textSize="40sp"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/flashcard_answer1"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:layout_below="@id/flashcard_question"
        android:layout_centerVertical="true"
        android:layout_marginTop="110dp"
        android:background="@color/teal_100"
        android:gravity="center"
        android:text="@string/answer1"
        android:textColor="@color/gray_200"
        android:textSize="30sp"
        android:visibility="visible"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/flashcard_answer2"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:layout_below="@id/flashcard_answer1"
        android:layout_centerVertical="true"
        android:layout_marginTop="10sp"
        android:background="@color/teal_100"
        android:gravity="center"
        android:text="@string/answer2"
        android:textColor="@color/gray_200"
        android:textSize="30sp"
        android:visibility="visible"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/flashcard_answer3"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:layout_below="@id/flashcard_answer2"
        android:layout_centerVertical="true"
        android:layout_marginTop="10sp"
        android:background="@color/teal_100"
        android:gravity="center"
        android:text="@string/answer3"
        android:textColor="@color/gray_200"
        android:textSize="30sp"
        android:visibility="visible"
        tools:ignore="TextSizeCheck" />
</RelativeLayout>